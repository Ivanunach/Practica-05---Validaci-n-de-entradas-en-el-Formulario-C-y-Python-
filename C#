        private void textBox2_KeyPress(object sender, KeyPressEventArgs e)
        {
            
                // Verificar si el carácter no es una letra ni un espacio ni una tecla de control (como retroceso)
                if (!char.IsLetter(e.KeyChar) && !char.IsControl(e.KeyChar) && !char.IsWhiteSpace(e.KeyChar))
                {
                    // Si no es válido, cancela el evento y muestra un mensaje
                    e.Handled = true;
                    MessageBox.Show("Solo se permiten letras.", "Entrada inválida", MessageBoxButtons.OK, MessageBoxIcon.Warning);
                }
            

        }

        private void textBox3_KeyPress(object sender, KeyPressEventArgs e)
        {
            if (!char.IsLetter(e.KeyChar) && !char.IsControl(e.KeyChar) && !char.IsWhiteSpace(e.KeyChar))
            {
                // Si no es válido, cancela el evento y muestra un mensaje
